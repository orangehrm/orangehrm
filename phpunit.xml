<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="symfony/test/phpunit/Util/bootstrap.php" colors="true"
         convertErrorsToExceptions="true" convertNoticesToExceptions="true" convertWarningsToExceptions="true"
         beStrictAboutOutputDuringTests="true"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
  <coverage>
    <include>
      <directory suffix=".php">symfony</directory>
    </include>
    <exclude>
      <directory>symfony/apps</directory>
      <directory>symfony/cache</directory>
      <directory>symfony/config</directory>
      <directory>symfony/data</directory>
      <directory>symfony/lib</directory>
      <directory>symfony/web</directory>
      <directory>symfony/vendor</directory>
      <directory>symfony/test</directory>
    </exclude>
  </coverage>
  <testsuites>
    <testsuite name="Admin Tests">
      <directory>symfony/plugins/orangehrmAdminPlugin/test/Api</directory>
      <directory>symfony/plugins/orangehrmAdminPlugin/test/Service</directory>
      <directory>symfony/plugins/orangehrmAdminPlugin/test/Dao</directory>
      <directory>symfony/plugins/orangehrmAdminPlugin/test/Entity</directory>
    </testsuite>
    <testsuite name="Authentication Tests">
      <directory>symfony/plugins/orangehrmAuthenticationPlugin/test/Service</directory>
    </testsuite>
    <testsuite name="Core Tests">
      <directory>symfony/plugins/orangehrmCorePlugin/test/Service</directory>
      <directory>symfony/plugins/orangehrmCorePlugin/test/Dao</directory>
      <directory>symfony/plugins/orangehrmCorePlugin/test/Authorization</directory>
      <directory>symfony/plugins/orangehrmCorePlugin/test/Api</directory>
      <directory>symfony/plugins/orangehrmCorePlugin/test/Helper</directory>
      <directory>symfony/plugins/orangehrmCorePlugin/test/Vue</directory>
    </testsuite>
    <testsuite name="Pim Tests">
      <directory>symfony/plugins/orangehrmPimPlugin/test/Service</directory>
      <directory>symfony/plugins/orangehrmPimPlugin/test/Dao</directory>
      <directory>symfony/plugins/orangehrmPimPlugin/test/Api</directory>
      <directory>symfony/plugins/orangehrmPimPlugin/test/Entity</directory>
    </testsuite>
  </testsuites>
</phpunit>
